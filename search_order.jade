extends layout
block head
  style.
    .mdl-data-table th {
      font-size: 16px;
    }
block body
  .android-more-section
    .android-card-container.mdl-grid
      .mdl-cell.mdl-cell--12-col.mdl-card.mdl-shadow--3dp
        .mdl-card__title
          .mdl-card__title-text 查詢訂單
        .mdl-card__supporting-text(style='width:auto')
          .mdl-grid
            .mdl-cell.mdl-cell--12-col
              .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.textfield-demo
                input#name.mdl-textfield__input(type='text')
                label.mdl-textfield__label(for='name') 訂單編號
            .mdl-cell.mdl-cell--12-col
              .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.textfield-demo
                input#phone.mdl-textfield__input(type='text')
                label.mdl-textfield__label(for='phone') email
      .mdl-cell.mdl-cell--12-col.mdl-card.mdl-shadow--3dp(style="min-height: auto;")
        a.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--accent(href='/search_order_result') 送出
